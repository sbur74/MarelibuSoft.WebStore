@model IEnumerable<MarelibuSoft.WebStore.Models.ViewModels.NavItemViewModel>
		@foreach (var item in Model)
		{
			<li>
				<a href="#" data-toggle="dropdown" class="dropdown-toggle">@item.Name</a>
				<ul id="main_@item.Name@item.Id" class="dropdown-menu multi-level">
					<li>
					@{ var par = new Dictionary<string, string>{{ "categoryId" , item.SlugUrl }	};}
						<a asp-area="" asp-controller="Produkte" asp-action="Kategorie" asp-all-route-data="par">@Html.DisplayFor(modelItem => item.Name)</a>
					</li>
					@if (item.Childs != null && item.Childs.Count > 0)
					{
						@foreach (var sub in item.Childs)
						{
							<li>
								@{ var parpar = new Dictionary<string, string> { { "categoryId", item.SlugUrl },{"categorySubId", sub.SlugUrl } };}
					
								<a asp-area="" asp-controller="Produkte" asp-action="Kategorie" asp-all-route-data="parpar">&ensp;@Html.DisplayFor(modelItem => sub.Name)</a>
							</li>
							@if (sub.Childs != null && sub.Childs.Count > 0)
							{
								@foreach (var details in sub.Childs)
								{
									<li>
										@{ var parparpar = new Dictionary<string, string> { { "categoryId", item.SlugUrl }, { "categorySubId", sub.SlugUrl }, { "categoryDetailId", details.SlugUrl } };}
										<a asp-area="" asp-controller="Produkte" asp-action="Kategorie" asp-all-route-data="parparpar">&emsp;&emsp;@Html.DisplayFor(modelItem => details.Name)</a>
									</li>
								}
							}
						}
					}
				</ul>
			</li>
		}