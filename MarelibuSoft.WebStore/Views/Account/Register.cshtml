@model RegisterViewModel
@{
    ViewData["Title"] = "Benutzerkonto erstellen";
}

<h2>@ViewData["Title"]</h2>
@if (!string.IsNullOrWhiteSpace(Model.ErrorString))
{
    <h3 class="h3 bg-danger text-danger"><i class="fa fa-warning"></i> @Model.ErrorString</h3>
}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Konto erstellen</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @* customer *@
            <h4>Kundendaten (Rechnungsadresse)</h4>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalAddress"></label>
                <input asp-for="AdditionalAddress" class="form-control" />
                <span asp-validation-for="AdditionalAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostCode"></label>
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryID"></label>
                <select id="selectCountry" asp-for="CountryID" class="form-control" required onchange="marelibusoft.invioceaddress.onSelectionChange();">
                    @foreach (Country country in Model.Countries)
                    {
                        <option id="country_@country.ID" value="@country.ID" data-allowed-for-shipping="@country.IsAllowedShipping">
                            @country.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <img id="img-captcha" src="~/get-captcha-image" title="clicken zum neu laden" />
                </div>
                <input type="text" class="form-control" placeholder="Bitte Code eingeben" asp-for="CaptchaCode" maxlength="4" title="Bitte den angezeigten Code eingeben!" />
                <span asp-validation-for="CaptchaCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Registrieren</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
