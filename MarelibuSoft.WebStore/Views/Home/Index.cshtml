@model MarelibuSoft.WebStore.Models.ViewModels.HomeViewModel
@{
	ViewData["Title"] = "Willkommen bei marelibuDesign";
	Random random = new Random();
}
@if (Model.ImageUrls != null && Model.ImageUrls.Count > 0)
{
	int idx0 = random.Next(0, Model.ImageUrls.Count - 1);
	int idx1 = random.Next(0, Model.ImageUrls.Count - 1);
	int idx2 = random.Next(0, Model.ImageUrls.Count - 1);
	int idx3 = random.Next(0, Model.ImageUrls.Count - 1);

	if (idx1 == idx0) { idx1 = random.Next(0, Model.ImageUrls.Count - 1); }
	if (idx2 == idx0 || idx2 == idx1) { idx2 = random.Next(0, Model.ImageUrls.Count - 1); }
	if (idx3 == idx0 || idx3 == idx1 || idx3 == idx2) { idx3 = random.Next(0, Model.ImageUrls.Count - 1); }
	<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
		<ol class="carousel-indicators">
			<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
			<li data-target="#myCarousel" data-slide-to="1"></li>
			<li data-target="#myCarousel" data-slide-to="2"></li>
			<li data-target="#myCarousel" data-slide-to="3"></li>
		</ol>
		<div class="carousel-inner" role="listbox">
			<div class="item active">
				<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx0])" style="min-height:200px;height:200px;width:200px;margin:auto;" />
				<div class="carousel-caption" role="option">
				</div>
			</div>
			<div class="item">
				<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx1])" style="min-height:200px;height:200px;width:200px;margin:auto;" />
			</div>
			<div class="item">
				<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx2])" style="min-height:200px;height:200px;width:200px;margin:auto;" />
			</div>
			<div class="item">
				<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx3])" style="min-height:200px;height:200px;width:200px;margin:auto;" />
			</div>
		</div>
		<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
}

<h1 style="text-align:center">Willkommen bei marelibuDesign</h1>

<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<section style="text-align:center">
			<h2 style="font-style:italic">
					Ich wünsche frohe Feiertage,
					<br />
					das ist doch klar und ohne Frage.
					<br />
					Bei Tannenduft und Kerzenschein
					<br />
					Möge alles friedlich sein.				
			</h2>
			<br />
			<h3>
				Frohe Weihnachten und alles Gute für 2019 wünscht<br />marelibuDesign
			</h3>
		</section>
	</div>
</div>
<br />
<div class="row">
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<section>
			<h4>Neuigkeiten</h4>
			<img src="~/contents/BannerErffnung.png" style="max-width:100%; height:auto;" class="img-responsive" />
		</section>
	</div>
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<section>
			<h4>Designbeispiel</h4>
			<video style="max-width: 100%; height:auto;" autoplay muted loop>
				<source src="~/contents/StirnbandHP.mp4" type="video/mp4">
			</video>
		</section>
	</div>
</div>


