@model MarelibuSoft.WebStore.Models.ViewModels.HomeViewModel
@{
	ViewData["Title"] = "Home Page";
	Random random = new Random();
	int idx0 = random.Next(0, Model.ImageUrls.Count-1);
	int idx1 = random.Next(0, Model.ImageUrls.Count-1);
	int idx2 = random.Next(0, Model.ImageUrls.Count-1);
	int idx3 = random.Next(0, Model.ImageUrls.Count-1);

	if (idx1 == idx0) { idx1 = random.Next(0, Model.ImageUrls.Count - 1); }
	if(idx2 == idx0 || idx2 == idx1) { idx2 = random.Next(0, Model.ImageUrls.Count - 1); }
	if(idx3 == idx0 || idx3 == idx1 || idx3 == idx2) { idx3 = random.Next(0, Model.ImageUrls.Count - 1); }
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
		<li data-target="#myCarousel" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div class="item active">
			<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx0])" style="min-height:200px;height:200px;width:300px;margin:auto;" />
			<div class="carousel-caption" role="option">
				<p>Wunderbare Stoffe</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx1])" style="min-height:200px;height:200px;width:300px;margin:auto;" />
		</div>
		<div class="item">
			<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx2])" style="min-height:200px;height:200px;width:300px;margin:auto;" />
		</div>
		<div class="item">
			<img src="~/images/store/@Html.DisplayFor(model => model.ImageUrls[idx3])" style="min-height:200px;height:200px;width:300px;margin:auto;" />
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

