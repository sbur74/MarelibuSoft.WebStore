@model MarelibuSoft.WebStore.Areas.Admin.Models.AdminViewModels.OrderEmailViewModel

@{
    ViewData["Title"] = "EMail versenden";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	Guid id = Model.OrderID;
}

<h2>EMail versenden</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EMailSend" enctype="multipart/form-data">
			<input hidden="hidden" asp-for="OrderID" value="@id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
			<div class="form-group">
				<div class="col-md-10">
					<p>Anhang:</p>
					<input name="files" type="file" class="form-control" accept="files/*" multiple />
				</div>
			</div>
			<br />
			<br />
            <div class="form-group">
                <input type="submit" value="Senden" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

