

@model MarelibuSoft.WebStore.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Kategorie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
		<dt>
			@Html.DisplayNameFor(model => model.Subs)
		</dt>
		<dd>
			@if (Model.Subs.Count > 0)
			{
				<ul>
					@foreach (CategorySub item in Model.Subs)
				{
						<li>
							@Html.DisplayFor(modelItem => item.Name)
							@if (item.Details.Count > 0)
							{
								<ul>
									@foreach (CategoryDetail detail in item.Details)
									{
										<li>@Html.DisplayFor(modelITem => detail.Name)</li>
									}
								</ul>

							}
							else
							{
								<ul><li>Keine Detail-Kategorien vorhanden</li></ul>
							}
						</li>
				}
				</ul>
			}
			else
			{
				<ul><li>Keine Unterkategorien vorhanden</li></ul>
			}


		</dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Kategorie bearbeiten</a> <br />
	<a class="btn btn-success" asp-area ="Admin" asp-controller="CategorySubs" asp-action="Create" asp-route-id="@Model.ID">neu Unterkategorie</a><br />
    <a class="btn btn-primary" asp-action="Index">zur &Uuml;bersicht</a>
</div>
