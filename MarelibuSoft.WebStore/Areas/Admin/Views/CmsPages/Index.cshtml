@model IEnumerable<MarelibuSoft.WebStore.Models.CmsPage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neuen Seiteninhalt erstellen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageDesciption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageEnum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LayoutEnum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusEnum)
            </th>
			<th>
				@Html.DisplayNameFor(model => model.LastChange)
			</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageDesciption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageEnum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LayoutEnum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusEnum)
            </td>
			<td>
				@Html.DisplayFor(modelItem => item.LastChange)
			</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Bearbeiten</a> |
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Löschen</a>
            </td>
        </tr>
}
    </tbody>
</table>
