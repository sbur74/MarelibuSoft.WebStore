@model IEnumerable<MarelibuSoft.WebStore.Models.Paymend>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Zahlungsarten &Uuml;bersicht</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neu Anlage</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LogoUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
			<th>
				@Html.DisplayNameFor(model => model.PaymendType)
			</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			<img style="max-width:80px;" src="~/images/paymend/@Html.DisplayFor(modelitem => item.LogoUrl)" alt="@Html.DisplayFor(modelitem => item.LogoUrl)" />
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.IsActive)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.PaymendType)
		</td>
		<td>
			<a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Bearbeiten" asp-action="Edit" asp-route-id="@item.ID"><span class="glyphicon glyphicon-edit"></span></a> |
			<a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a> |
			<a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="L&ouml;schen" asp-action="Delete" asp-route-id="@item.ID"><span class="glyphicon glyphicon-trash"></span></a>
		</td>
	</tr>
}
    </tbody>
</table>
