@model IEnumerable<MarelibuSoft.WebStore.Models.ProductImage>

@{
    ViewData["Title"] = "Artikelbilder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Artikelbilder</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Neu</a>
</p>
<table class="table">
    <thead>
        <tr>
			<th>
				Bild
			</th>
                <th>
                    Name
                </th>
                <th>
                    Hauptartikelbild
                </th>
            <th>
                Artikel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
			<td>
				<img src="~/images/store/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.Name)" width="40" height="40" />
			</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMainImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @*<a class="btn btn-default" asp-action="Edit" asp-route-id="@item.ProductImageID">Bearbeiten</a>*@
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProductImageID">Details</a>
				<a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="L&ouml;schen" asp-action="Delete" asp-route-id="@item.ProductImageID"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>

