@model IEnumerable<MarelibuSoft.WebStore.Models.Country>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" asp-action="Create">neues Land anlegen</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
			<th>
				@Html.DisplayNameFor(model => model.IsAllowedShipping)
			</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
			<td>
				@Html.DisplayFor(modelItem => item.IsAllowedShipping)
			</td>
            <td>
                <a class="btn btn-success"  asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
